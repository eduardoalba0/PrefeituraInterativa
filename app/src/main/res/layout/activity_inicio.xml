<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_vermelho"
    android:transitionName="base_transition"
    tools:context=".controller.InicioActivity">

    <RelativeLayout
        android:id="@+id/l_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/espaco_pequeno"
        android:layout_marginTop="@dimen/espaco_grande"
        android:layout_marginEnd="@dimen/espaco_pequeno"
        android:background="@drawable/shape_quadrado_arr_branco"
        android:elevation="5dp"
        android:padding="5dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_usuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/espaco_pequeno"
            android:background="@drawable/shape_quadrado_arr_branco"
            android:contentDescription="@string/str_perfil"
            android:src="@drawable/ic_usuario"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/dark_green"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/espaco_pequeno"
            android:layout_toEndOf="@id/img_usuario"
            android:gravity="center_vertical"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/texto_subtitulo"
            app:icon="@drawable/ic_proximo"
            app:iconGravity="end"
            app:iconSize="40dp"
            app:iconTint="@color/dark_green"
            app:textAllCaps="false" />
    </RelativeLayout>
</ScrollView>