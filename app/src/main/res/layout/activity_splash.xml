<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_vermelho"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".controller.ActivitySplash">

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:background="@drawable/shape_quadrado_arr_branco"
        android:contentDescription="@string/str_emblema"
        android:elevation="5dp"
        android:src="@mipmap/ic_maca"
        android:tint="@color/colorPrimary"
        android:transitionName="splash_transition"/>

    <TextView
        android:id="@+id/tx_app"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka"
        android:gravity="center"
        android:textSize="@dimen/texto_titulo"
        android:text="@string/app_name"
        android:textStyle="bold" />
</LinearLayout>