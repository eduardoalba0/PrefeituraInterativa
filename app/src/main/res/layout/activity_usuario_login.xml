<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.UsuarioLoginActivity">

    <!-- shape para animação -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_gradient_vermelho" />

    <RelativeLayout
        android:id="@+id/shape_fundo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_gradient_branco">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanho_quadrado_irregular"
            android:background="@drawable/shape_quadrado_irregular_vermelho" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/espaco_medio">

            <ImageView
                android:id="@+id/img_app"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/espaco_pequeno"
                android:background="@drawable/shape_quadrado_arr_branco"
                android:contentDescription="@string/str_emblema"
                android:elevation="5dp"
                android:src="@mipmap/ic_maca"
                android:tint="@color/colorPrimary"
                android:transitionName="splash_transition" />

            <LinearLayout
                android:id="@+id/l_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_app"
                android:layout_marginBottom="@dimen/espaco_pequeno"
                android:background="@drawable/shape_quadrado_arr_branco"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/espaco_pequeno">

                <TextView
                    android:id="@+id/tv_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/espaco_medio"
                    android:text="@string/str_vamos_comecar"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/texto_subtitulo"
                    android:textStyle="normal" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edl_email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/espaco_muito_pequeno"
                    android:hint="@string/str_email"
                    app:boxStrokeColor="@color/grey"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/grey"
                    app:errorEnabled="true"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/grey"
                    app:startIconContentDescription="@string/str_email"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/grey">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textAllCaps="true"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/texto_label" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edl_senha"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/espaco_muito_pequeno"
                    android:hint="@string/hint_senha"
                    app:boxStrokeColor="@color/grey"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/grey"
                    app:errorEnabled="true"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/grey"
                    app:startIconContentDescription="@string/hint_senha"
                    app:startIconDrawable="@drawable/ic_senha"
                    app:startIconTint="@color/grey">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_senha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textAllCaps="true"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/texto_label" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_recuperar_senha"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/espaco_muito_pequeno"
                    android:backgroundTint="@color/white"
                    android:text="@string/str_esqueceu_senha"
                    android:textAllCaps="true"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/texto_label"
                    app:icon="@drawable/ic_senha"
                    app:iconGravity="end"
                    app:iconTint="@color/colorSecondary" />

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/espaco_pequeno"
                    android:background="@drawable/shape_quadrado_arr_vermelho"
                    android:elevation="5dp"
                    android:padding="@dimen/espaco_muito_pequeno"
                    android:text="@string/str_entrar"

                    android:textSize="@dimen/texto_botao" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_cadastrar"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/espaco_pequeno"
                    android:text="@string/str_cadastrar"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/texto_label"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_usuario"
                    app:iconGravity="end"
                    app:iconTint="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l_login"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_login_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/espaco_muito_pequeno"
                    android:backgroundTint="@color/white"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="@dimen/espaco_pequeno"
                    android:text="@string/str_conta_google"
                    android:textAllCaps="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/texto_label"
                    android:transitionName="base_transition"
                    app:cornerRadius="@dimen/raio_quadrado_medio"
                    app:icon="@drawable/ic_google"
                    app:iconTintMode="multiply" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>