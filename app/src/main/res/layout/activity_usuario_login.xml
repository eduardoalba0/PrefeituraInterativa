<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_branco"
    tools:context=".controller.ActivitySplash">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_quadrado_irregular_vermelho"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_quadrado_arr_branco"
        android:contentDescription="@string/str_emblema"
        android:src="@mipmap/ic_maca"
        android:tint="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/l_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_app"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_quadrado_arr_branco"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/str_vamos_comecar"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:mtf_image="@drawable/ic_email"
            app:mtf_labelColor="@color/grey">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:textAllCaps="true"
                android:textColor="@color/grey" />

        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:mtf_labelColor="@color/grey"
            app:mtf_image="@drawable/ic_senha"
            app:mtf_openKeyboardOnFocus="false">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:hint="@string/hint_senha"
                android:inputType="textPassword"
                android:textColor="@color/grey" />
        </com.github.florent37.materialtextfield.MaterialTextField>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_quadrado_arr_vermelho"
            android:elevation="2dp"
            android:text="@string/str_entrar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/str_esqueceu_senha"
            android:textAllCaps="true"
            android:textColor="@color/colorSecondary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_login"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/bt_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_quadrado_arr_branco"
            android:elevation="5dp"
            android:padding="1dp">

            <ImageView
                android:id="@+id/img_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/str_conta_google"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_google" />

            <TextView
                android:id="@+id/tv_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/img_google"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/str_conta_google"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/str_nao_cadastrado"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/str_cadastrar"
            android:textAllCaps="true"
            android:textColor="@color/colorSecondary" />
    </LinearLayout>

</RelativeLayout>