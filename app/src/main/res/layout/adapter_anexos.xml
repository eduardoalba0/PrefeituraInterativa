<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/espaco_muito_pequeno"
    android:elevation="5dp"
    android:background="@color/whiteFA"
    android:padding="@dimen/espaco_muito_pequeno">

    <ImageView
        android:id="@+id/img_anexo"
        android:layout_width="@dimen/componente_pequeno"
        android:layout_height="@dimen/componente_pequeno"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_remover"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/str_remover"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/texto_label"
        app:icon="@drawable/ic_remover"
        app:iconGravity="textEnd"
        app:iconSize="40dp"
        app:iconTint="@color/colorPrimary" />
</RelativeLayout>
