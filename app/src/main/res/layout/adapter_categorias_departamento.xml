<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/espaco_pequeno"
    app:cardCornerRadius="@dimen/espaco_pequeno">
    <!-- Colocar em bottomsheet os Chips -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/espaco_muito_pequeno">

        <TextView
            android:id="@+id/tv_departamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:gravity="fill_horizontal"
            android:layout_margin="@dimen/espaco_muito_pequeno"
            android:textColor="@color/ms_black_87_opacity"
            android:textSize="@dimen/texto_label" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tipoSolicitacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_departamento" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>