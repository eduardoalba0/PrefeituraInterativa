<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/espaco_pequeno"
    android:layout_height="@dimen/componente_gigante">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/espaco_muito_pequeno"
        android:textColor="@color/blackWhite"
        android:textSize="@dimen/texto_botao" />

    <TextView
        android:id="@+id/tv_hintCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/espaco_muito_pequeno"
        android:text="@string/str_solicitacao_tipo"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/texto_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/espaco_pequeno"
        android:background="@color/ms_material_grey_400" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_categorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_continuar"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/componente_muito_pequeno"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/espaco_pequeno"
        android:paddingStart="@dimen/espaco_medio"
        android:paddingEnd="@dimen/espaco_medio"
        android:text="@string/dialog_ok"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/texto_botao"
        android:visibility="visible"
        app:icon="@drawable/ic_proximo"
        app:iconGravity="end"
        app:iconTint="@color/colorRed" />
</LinearLayout>