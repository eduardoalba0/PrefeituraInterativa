<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/componente_gigante"
    android:padding="@dimen/espaco_pequeno">

    <ImageView
        android:id="@+id/img_viewer"
        android:layout_width="match_parent"
        android:src="@drawable/ic_adicionar_galeria"
        android:layout_height="@dimen/componente_gigante" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_viewer"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_recusar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/espaco_muito_pequeno"
            android:src="@drawable/ic_cancelar"
            android:tint="@color/colorPrimary"
            app:backgroundTint="@color/white"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_aceitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/espaco_muito_pequeno"
            android:src="@drawable/ic_sucesso"
            android:tint="@color/colorPrimary"
            app:backgroundTint="@color/white"
            app:fabSize="normal" />
    </LinearLayout>

</RelativeLayout>