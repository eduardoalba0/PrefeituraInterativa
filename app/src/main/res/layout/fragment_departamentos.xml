<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".controller.FragmentDepartamentos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_quadrado_irregular_vermelho"
        android:gravity="center"
        android:padding="@dimen/espaco_pequeno">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_departamentos"
            android:textColor="@color/ms_white"
            android:textSize="@dimen/texto_normal" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_departamentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>