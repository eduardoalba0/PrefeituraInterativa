<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/float_transparent</item>
        <item name="android:navigationBarColor">@color/float_transparent</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/fredoka</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
